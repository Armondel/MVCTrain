@model MVCTrain.Models.Customer
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Create", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.BirthdayDate)
        @Html.TextBoxFor(m => m.BirthdayDate, new { @class = "form-control" })
    </div>
    <div class="checkbox-inline">
        <label>
            Is subscribed to newsletter @Html.CheckBoxFor(m => m.IsSubscribedToNewsletter) 
        </label>
    </div>
}

